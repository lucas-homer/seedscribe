<% include ../partials/header %>
<h1>this is the new garden page</h1>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new garden</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/gardens" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="garden name">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="description" placeholder="garden description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Create</button>
                </div>
            </form>
            <a href="/gardens">View all gardens</a>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>
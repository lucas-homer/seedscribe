<% include ../partials/header %>

<div class="container">
    <div class="card">
        <div class="card-content">
            <span class="card-title">
                <h4 style="text-align: center">Edit <%= garden.name %></h4>
            </span>
            <div>
                <form action="/gardens/<%=garden._id %>?_method=PUT" method="POST">
                    <div class="row">
                        <div class="input-field">
                            <input type="text" name="garden[name]" value="<%= garden.name %>">
                        </div>    
                    </div>
                    <div class="row">
                        <div class="input-field">
                            <textarea type="text" name="garden[description]"><%= garden.description %></textarea>
                        </div>    
                    </div>
                    
                    <button class="waves-effect waves-light btn green darken-4"><i class="material-icons left">done</i>Save</button>
                    
                </form>   
            </div>
        </div>
    </div>
    
    <div class="row">
        <a class="waves-effect waves-green btn-flat" href="/gardens"><i class="material-icons">arrow_back</i></a>
    </div>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <div style="width: 30%; margin: 30px auto;">
            <h1 style="text-align: center">Edit: <%= garden.name %></h1>
            <form action="/gardens/<%=garden._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="garden[name]" value="<%= garden.name %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="garden[description]"><%= garden.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Update</button>
                </div>
            </form>
            <a href="/gardens/<%= garden._id%>">Go back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>